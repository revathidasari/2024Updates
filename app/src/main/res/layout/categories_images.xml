<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/categoryLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foodImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_dining_24" />
        <ImageView
            android:id="@+id/rechargeImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_phone_recharge" />
        <ImageView
            android:id="@+id/transportationImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_transportation" />
        <ImageView
            android:id="@+id/rentImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_apartment_rent" />
        <ImageView
            android:id="@+id/shoppingImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_shopping" />
        <ImageView
            android:id="@+id/medicalHealthImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_health_and_safety_24" />
        <ImageView
            android:id="@+id/personalCareImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/personalcare" />
        <ImageView
            android:id="@+id/entertainmentImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_entertainment" />
        <ImageView
            android:id="@+id/homeGivingImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_other_houses_24" />
        <ImageView
            android:id="@+id/giftImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_redeem_gift" />
        <ImageView
            android:id="@+id/savingsImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_savings_24" />
    </LinearLayout>
</HorizontalScrollView>